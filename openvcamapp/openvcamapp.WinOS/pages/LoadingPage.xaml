<Page x:Class="openvcamapp.winos.pages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:openvcamapp.winos.pages" 
      xmlns:local1="clr-namespace:openvcamapp.winos.controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#F2F2F2"
      Title="LoadingPage"
      Margin="-65, 0, 0, 0">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <local1:LoadingControl Diameter="40"  Color1="#767171" Color2="Transparent"/>
            <Label Content="Loading..." VerticalAlignment="Center" FontSize="25" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
